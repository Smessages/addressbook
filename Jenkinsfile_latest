#!groovy
/*
=======================================
Author: DevOps
Date: 05/12/2020
Purpose: To build frontend java project
=======================================
*/

pipeline {
 
 agent {

     label 'master'
 }
 
 tools {

     maven 'mymaven'
     jdk 'java11'
 }

 stages {

     stage('Validate Project') {
     steps {

         script{
			
			sh """
             			mvn validate
			 """
         }
     }
     }

     stage('Code Compile') {
     steps {

         script{
			
			sh """
             			mvn compile
			 """
         }
     }
     }
     stage('test code') {
     	steps {

         	script{
			
			sh """
             			mvn test
			 """
         }
     }
     } 
     stage('code package') {
     	steps {

         	script{
			
			sh """
             			mvn package
			 """
         }
     }
     } 
	  
 }

}
